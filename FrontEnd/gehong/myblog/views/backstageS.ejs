<div class="container">
    <div class="page-header">
        <h5>Setting</h5>
    </div>
</div>

<div class="container">
    <div class="panel panel-primary">
        <div class="panel-body">
            <span>Name :</span>
            <span id="name-text"><%= user.name %></span>
            <input type="hidden" id="backstage-name"></input>
            <input class="btn btn-default" id="backstage-name-sure" type="hidden"></input>
        </div>
    </div>
</div>

<div class="container">
    <div class="panel panel-primary">
        <div class="panel-body">
            <span>Password : </span>
            <span id="password-text">**********</span>
            <form class="form-horizontal" method="post">
                <input type="hidden" id="backstage-password" name="backstage-password" maxlength="30"></input>
                <input class="btn btn-default" id="backstage-password-sure" type="hidden"></input>
            </form>
        </div>
        <div class="panel-footer">
            <button class="label label-success" id="backstage-password-modify">modify</button>
        </div>
    </div>
</div>

<div class="container">
    <div class="panel panel-primary">
        <div class="panel-body">
            <span>Email :</span>
            <span id="email-text"><%= user.email %></span>
        </div>
    </div>
</div>
